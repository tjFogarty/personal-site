<h2>
  Recently played tracks
  <svg class="c-now-playing__icon">
    <use xlink:href="#music"></use>
  <svg>
</h2>

{% cache for 1 hour %}
{% set jsonResponse = fetchJson({
  'url': 'https://ws.audioscrobbler.com/2.0/?method=user.getrecenttracks&user=cowpuncher&api_key=dc2e7242feba68442dda3281bdd202f0&format=json&limit=5'
}) %}

{% set recentlyPlayed = jsonResponse['recenttracks'] %}

<ul>
  {% for item in recentlyPlayed['track'] %}
    <li>
      <p>
        {{ item['name'] }}
        by
        {{ item['artist']['#text'] }}
      </p>
    </li>
  {% endfor %}
</ul>
{% endcache %}
<p>Data provided by the <a href="https://www.last.fm/api" target="_blank" rel="noopener">Last.fm API</a></p>


<h2 id="instagram">Instagram</h2>

{% cache %}
  <ul class="c-gallery">
    {% for media in craft.picPuller.media_recent({ 'user_id' : 1 }) %}
      {% if media.status == TRUE %}
        <li class="c-gallery__item">
          <a href="{{ media.link }}" rel="noopener" target="_blank" class="c-gallery__link">
            <img src="{{ media.thumbnail }}" alt="{{ media.caption_only }}" class="c-gallery__image" decoding="async" width="{{ media.thumbnail_width }}px" height="{{ media.thumbnail_height }}px">
          </a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
  {% endcache %}

{% endblock %}