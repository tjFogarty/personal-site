<!doctype html>
<html lang="en" {% include 'components/_style-switcher' %}>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {{ mix('/assets/css/app.css', true, true) | raw }}

    <link rel="preload" href="/assets/js/main.js" as="script" crossorigin>

    {% if not craft.app.config.general.devMode %}
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-110493614-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-110493614-1');
    </script>

    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script>
      (adsbygoogle = window.adsbygoogle || []).push({
        google_ad_client: "ca-pub-7968513889349158",
        enable_page_level_ads: true
      });
    </script>
    {% endif %}

  </head>
  <body>
    {% include 'components/_dev-warning' %}
    {% include 'components/_navigation' %}
    {% include 'components/_icons' %}

    <main class="content">
      {% block content %}{% endblock %}
    </main>

    <script src="/assets/js/main.js" defer></script>

    {% if not craft.app.config.general.devMode %}
    <script>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', function() {
          navigator.serviceWorker.register('/sw.js');
        });
      }
    </script>
    {% endif %}

    {% include 'components/_footer' %}

    {% include 'components/_search' %}

  </body>
</html>