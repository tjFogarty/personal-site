<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    {% if craft.app.config.general.devMode %}
    <title>TJ Fogarty | DEV</title>
    <style>
      html {
        border: 5px solid #b4d455;
        width: 100%;
        height: 100%;
      }
    </style>
    {% else %}
    <title>TJ Fogarty | Web Developer</title>
    {% endif %}
    <meta name="description" content="Web Developer from Limerick, Ireland and living in Waterford.">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {{ mix('css/app.css', true, true) | raw }}

    <link rel="preload" href="{{ mix('js/manifest.js') }}" as="script">
    <link rel="preload" href="{{ mix('js/vendor.js') }}" as="script">
    <link rel="preload" href="{{ mix('js/main.js') }}" as="script">
    <link rel="preload" href="/fonts/open-sans.woff2" as="font" type="font/woff2" crossorigin>

    {% if not craft.app.config.general.devMode %}
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-110493614-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-110493614-1');
    </script>
    {% endif %}
  </head>
  <body>
    {% include 'components/navigation' %}

    <main class="max-w-xl mx-auto p-6">
      {% block content %}{% endblock %}
    </main>

    <div class="c-now-playing">
      <button type="button" class="c-now-playing__trigger js-lt-trigger">
        <i data-feather="music" class="c-now-playing__icon"></i>
      </button>
      <div class="c-now-playing__info js-lt-info">
        <div class="c-now-playing__text">
          <a href="" rel="noopener" target="_blank" class="flex items-center js-lt-url">
          <span class="text-sm js-lt-album"></span>
          &nbsp;-&nbsp;
          <span class="text-sm js-lt-artist"></span>
          </a>
        </div>
      </div>
    </div>

    <script src="{{ mix('js/manifest.js') }}" defer></script>
    <script src="{{ mix('js/vendor.js') }}" defer></script>
    <script src="{{ mix('js/main.js') }}" defer></script>

    {% if not craft.app.config.general.devMode %}
    <script>
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.getRegistrations()
          .then(function(registrations) {
            for (let registration of registrations) {
              registration.unregister()
            }
          })
      }
    </script>
    {% endif %}
  </body>
</html>
