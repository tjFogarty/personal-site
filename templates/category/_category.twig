{% extends 'layouts/default' %}

{% set socialTags = [
  { name: 'og:title', value: category.title ~ ' Posts by @tj_fogarty' },
  { name: 'og:url', value: category.url }
] %}

{% set metaTitle = category.title ~ ' Posts' %}

{% block content %}
<div class="l-container">
  {% cache %}
  <h1>{{ category.title }} Posts</h1>
  {% paginate craft.entries.section('posts').relatedTo(category).limit(null) as pageInfo, pageEntries %}

    <ul class="l-post-list">
    {% for entry in pageEntries %}
      <li class="l-post-list__item">
        {% include 'posts/_preview' with { post: entry, showPostDate: false } only %}
      </li>
    {% endfor %}
    </ul>
  {% endcache %}
</div>
{% endblock %}