<div class="c-post c-post--preview">
  <div class="c-post-preview__heading">
    {% if showPostDate %}
    <time class="c-post__date" datetime="{{ post.postDate.date }}">{{ post.postDate | date('d M') }}</time>
    {% endif %}

    <h3 class="c-post__title c-post__title--preview">
      <a class="c-post__title-link" href="/{{ post.slug }}">{{ post.title | typogrify }}</a>
    </h3>
  </div>
</div>